<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_choose_location"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/fui_ic_googleg_color_24dp"
               android:background="@drawable/custom_popupv_activity"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="Google Map"
                android:layout_width="150dp"
                android:layout_height="35dp" />
        </LinearLayout>
        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:text="@string/stringCityPushRoom"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/spn_city_push_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_popup_activity" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_png_drop_100" />
        </RelativeLayout>

        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/stringDistrictPushRoom"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/spn_district_push_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_popup_activity" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_png_drop_100" />
        </RelativeLayout>

        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/stringWardPushRoom"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/spn_ward_push_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_popup_activity" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_png_drop_100" />
        </RelativeLayout>

        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/stringStreetPushRoom"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_street_push_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_popup_activity"
                android:gravity="center"
                android:hint="@string/stringExampleStreetPushRoom"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/stringNoPushRoom"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_no_push_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_popup_activity"
                android:gravity="center"
                android:hint="@string/stringExampleNoPushRoom"
                android:textColor="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:textSize="14dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_nextStep1_post_room"
            android:layout_width="match_parent"
            android:height="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_rim"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>


</LinearLayout>