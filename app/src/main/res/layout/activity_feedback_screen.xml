<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cxc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#8D000000"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="40dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/named"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewv"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/logoaaaa"
                    android:scaleType="fitXY" />
            </LinearLayout>


            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/named"
                android:layout_marginTop="0dp"
                android:progressBackgroundTint="#70CFCFCF"
                android:progressTint="#FFEB3B" />

            <TextView
                android:id="@+id/sao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:text="Đánh giá của bạn!!"/>

            <EditText
                android:id="@+id/text"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_edit_text_login"
                android:textColorHint="#AFAFAF"
                android:hint="Hãy nhập suy nghĩ của bạn, chúng tôi sẽ lắng nghe và khắc phục nó trong tương lai!"/>

            <TextView
                android:id="@+id/ok"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_signup"
                android:layout_height="50dp"
                android:text="Gửi"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>