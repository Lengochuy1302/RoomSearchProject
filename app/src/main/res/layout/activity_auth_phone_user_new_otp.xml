<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".Views.AuthPhoneUserNewOTP">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:src="@drawable/preview" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Để hoàn tất thiết lập tài khoản của bạn, chung tôi sẽ gửi cho bạn một mã xác nhận"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/sdtotp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_rim_1"
            android:gravity="center"
            android:hint="Sô điện thoại"
            android:inputType="phone"
            android:textColor="@color/colorRateMedium"
            android:textColorHint="@color/colorRateMedium"
            android:textSize="14dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_phone_personal_page"
            android:layout_marginTop="1dp"
            android:text="*Sau khi thiết lập tài khoản bạn không thể thay đổi số điện thoại."
            android:textColor="@color/colorRed"
            android:textSize="10dp" />

        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/linersendotp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:id="@+id/nhapotp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/colorRateMedium"
                android:gravity="center"
                android:textColor="@color/colorRateMedium"
                android:paddingTop="10dp"
                android:background="@drawable/custom_rim_1"
                android:paddingRight="10dp"
                android:hint="Nhập OTP"
                android:paddingBottom="10dp"
                android:textSize="17dp" />
            <Button
                android:id="@+id/guilai"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:text="Gửi lại"
                android:textColorHint="#FFFFFF"
                android:enabled="false"
                android:layout_marginTop="0dp"
                android:layout_marginRight="1dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_user_room"
                android:layout_height="45dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/xacminh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_user_room"
            android:text="Gửi mã xác thực"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
        android:visibility="gone"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_signup"
            android:text="Xác thực"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>